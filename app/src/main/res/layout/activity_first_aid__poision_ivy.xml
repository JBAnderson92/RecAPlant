<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:textAlignment="center"
    tools:context=".FirstAid">


    <ImageView
        android:id="@+id/poisonIvy"
        android:layout_width="339dp"
        android:layout_height="275dp"
        android:contentDescription="@string/app_name"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.267"
        app:srcCompat="@drawable/poisionivy" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="403dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="29dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Poison Ivy"
        android:textAlignment="center"
        android:textColor="#F71506"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/poisonIvy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.359"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/aid"
        android:layout_width="375dp"
        android:layout_height="394dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="415dp"
        tools:text="Treatment: \n
        • Apply an over-the-counter corticosteroid cream for the first few days. \n
        • Apply calamine lotion. \n
        • Take oral antihistamines, such as diphenhydramine (Benadryl, others), which may also help you sleep better. \n
        • Soak in a cool-water bath containing an oatmeal-based bath product (Aveeno). \n
        • Place cool, wet compresses on the affected area for 15 to 30 minutes several times a day. " />

</androidx.constraintlayout.widget.ConstraintLayout>











